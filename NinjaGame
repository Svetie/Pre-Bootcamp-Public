NinjaGame: moving ninja across the grid and making him look like he is walking -->


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ninja Game</title>
</head>

<body>
    <h1>Ninja!</h1>
    <div id='background'>
        <div id='character' style='position:absolute; top:100px; left:450px; background-image: url("Images/down1.png"); width: 59px; height:86px;'></div>
    </div>
    <script type="text/javascript">
        var leftValue = 450, topValue = 100;
        var minValue = 0; maxValue = 500;
        var direction = 'down', step = 1;

        function update(){
            document.getElementById("character").style.left = leftValue+"px";
            document.getElementById("character").style.top = topValue+"px";
            document.getElementById("character").style.backgroundImage = 'url("Images/'+direction+step+'.png")';
            if(step == 1){
                step = 2;
            }
            else{
                step = 1;
            }
        }
        document.onkeydown = function(e){
            console.log(e);
            if(e.keyCode == 37 && leftValue > minValue) { // left
                leftValue = leftValue - 10;
                direction = 'left';
            }
            else if(e.keyCode == 39 && leftValue < maxValue){ // right
                leftValue = leftValue + 10;
                direction = 'right';
            }
            else if(e.keyCode == 40 && topValue < maxValue) { //down
                topValue = topValue + 10;
                direction = 'down';
            }
            else if(e.keyCode == 38 && topValue > minValue){ // up
                topValue = topValue - 10;
                direction = 'top';
            }
            // updates the values if they have been changed
            update();
        }

    </script>

</body>
</html>
